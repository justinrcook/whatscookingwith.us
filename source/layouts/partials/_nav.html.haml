.nav-wrapper
  %nav
    .container
      .navbar-header
        %button.navbar-toggle.collapsed{ type: "button",
          data: { toggle: "collapse", target: "#navbar" },
          aria: { expanded: "false", controls: "navbar"} }
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        = link_to "/", class: "navbar-brand" do
          = image_tag "logo.png", alt: "What's Cooking with Us"

      #navbar.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li= link_to "Us", "/"
          %li= link_to "Ceremony", "/ceremony.html"
          %li= link_to "Reception", "/reception.html"
          %li.dropdown
            = link_to "Accommodations", "#", class: "dropdown-toggle",
              data: { toggle: "dropdown"}, role: "button",
              aria: { expanded: "false" }
            %ul.dropdown-menu{ role: "menu" }
              %li
                = link_to "/accommodations/flights.html" do
                  %i.fa.fa-plane
                  Flights
              %li
                = link_to "/accommodations/getting-around.html" do
                  %i.fa.fa-bus
                  Getting Around
              %li
                = link_to "/accommodations/lodging.html" do
                  %i.fa.fa-bed
                  Lodging

          %li= link_to "RSVP", "/rsvp.html"
          %li= link_to "Registry", "/registry.html"
          %li= link_to "+More", "/more.html"
