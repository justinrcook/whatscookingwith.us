!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ http_equiv: 'X-UA-Compatible', content: 'IE=edge' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{name: 'description', content: ''}
    %meta{name: 'author', content: 'Designed by Valerie Merchant. Developed by Justin Cook.'}
    %title= current_page.data.title || ''

    :plain
      <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
      <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->

    = stylesheet_link_tag 'style'

  %body

    / Navbar
    / ==================================================
    %nav.navbar.navbar-default.navbar-fixed-top{ role: "navigation" }
      .container
        .navbar-header
          %button.navbar-toggle{ type: "button", data: { toggle: "collapse", target: ".navbar-collapse" } }
            %i.icon-bar
            %i.icon-bar
            %i.icon-bar
          = link_to '/', class: 'navbar-brand' do
            = image_tag 'logo.png', alt: "What's Cooking with Us", class: 'img-responsive'
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'The Latest', '#latest'
            %li= link_to 'He &amp; She', '#heandshe'
            %li= link_to 'Details', '#deets'
            %li= link_to 'Spapshots', '#snaps'
            %li= link_to 'Contact Us', '#contact'

    / Carousel
    / ==================================================
    #carousel.carousel.slide{ data: { ride: 'carousel' } }
      / Indicators
      %ol.carousel-indicators
        %li.active{ data: { target: '`carousel', slide_to: 0 } }
        %li{ data: { target: '`carousel', slide_to: 1 } }
        %li{ data: { target: '`carousel', slide_to: 2 } }

      .carousel-inner
        .item.active= image_tag 'carousel/1.jpg', class: 'img-responsive', alt: ''
        .item= image_tag 'carousel/2.jpg', class: 'img-responsive', alt: ''
        .item= image_tag 'carousel/3.jpg', class: 'img-responsive', alt: ''

      = link_to '#carousel', class: 'left carousel-control', data: { slide: 'prev' } do
        %span.glyphicon.glyphicon-chevron-left
      = link_to '#carousel', class: 'right carousel-control', data: { slide: 'next' } do
        %span.glyphicon.glyphicon-chevron-right

    .container
      = yield

    %footer.container
      %p Footer stuff

    / JavaScript
    / ==================================================
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js'
    = javascript_include_tag 'application'

    / Google Analytics
    / ==================================================
    = google_analytics_tag
